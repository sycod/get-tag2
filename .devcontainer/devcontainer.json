{
  "name": "Python 3.11",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "api.py"
      ]
    },
    "vscode": {
      "settings": {
        "workbench.panel.defaultLocation": "right",
        "notebook.lineNumbers": "on",
        "notebook.output.wordWrap": true,
      },
      "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "ms-python.pylint",
          "GitHub.copilot",
          "xelad0m.jupyter-toc",
          "mhutchie.git-graph"
      ]
    }
  },
  "onCreateCommand": {
    "apt_update": "sudo apt update && sudo apt -y upgrade",
    "venv_create": "python -m venv ~/.env",
  },
  "postCreateCommand": {
    "bashrc_update": "chmod +x ./.devcontainer/bashrc_update.sh && ./.devcontainer/bashrc_update.sh",
  },
  // streamlit content:
  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; pip3 install --user streamlit; echo 'âœ… Packages installed and Requirements met'",
  "postAttachCommand": {
    "server": "streamlit run api.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}